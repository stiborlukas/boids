<Window x:Class="boids.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Boids Simulation"
        Height="600"
        Width="800"
        Background="#0A0A0C">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#00FF7F"/>
            <Setter Property="Foreground" Value="#0A0A0C"/>
            <Setter Property="BorderBrush" Value="#00FF7F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Consolas, 'Courier New', Monospace"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#00FF7F"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontFamily" Value="Consolas, 'Courier New', Monospace"/>
        </Style>

        <Style TargetType="{x:Type Slider}">
            <Setter Property="Foreground" Value="#00FFFF"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#00FF7F"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#00FF7F"/>
            <Setter Property="FontFamily" Value="Consolas, 'Courier New', Monospace"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- TODO - omezit hranice Canvasu tak aby se boidy odrazeli -->
        <Canvas x:Name="SimulationCanvas"
                Background="#1A1A1E"
                Grid.Column="0"
                Margin="10"
                SnapsToDevicePixels="True">
            <Rectangle Width="{Binding RelativeSource={RelativeSource AncestorType=Canvas}, Path=ActualWidth}"
                       Height="{Binding RelativeSource={RelativeSource AncestorType=Canvas}, Path=ActualHeight}"
                       Fill="#1A1A1E"/>
            <Grid Opacity="0.1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="2"/>
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Fill="White"/>
                <Rectangle Grid.Row="1" Fill="#00FF7F"/>
            </Grid>
        </Canvas>

        <Border Grid.Column="1"
                Background="#1A1A1E"
                BorderBrush="#00FF7F"
                BorderThickness="1"
                Margin="10"
                Padding="15">

            <StackPanel>

                <TextBlock Text="[CONTROLS]"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="StartButton" Content="START" Grid.Column="0" Click="StartButton_Click"/>
                    <Button x:Name="PauseButton" Content="PAUSE" Grid.Column="1" Click="PauseButton_Click"/>
                    <Button x:Name="ResetButton" Content="RESET" Grid.Column="2" Click="ResetButton_Click"/>
                </Grid>
                <Grid Margin="0,5,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="ImportButton" Content="IMPORT" Grid.Column="0" Click="ImportButton_Click"/>
                    <Button x:Name="ExportButton" Content="EXPORT" Grid.Column="1" Click="ExportButton_Click"/>
                </Grid>
                <Rectangle Height="1" Fill="#00FF7F" Margin="0,10"/>

                <TextBlock Text="[PARAMETERS]"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,10,0,10"/>

                <TextBlock Text="BOID COUNT:" Margin="5,0"/>
                <Grid Margin="5,5,5,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="BoidCountSlider" Minimum="10" Maximum="200" Value="50" Grid.Column="0"/>
                    <TextBlock x:Name="BoidCountValue"
                               Text="{Binding ElementName=BoidCountSlider, Path=Value, StringFormat=F0}"
                               Foreground="#00FFFF"
                               Grid.Column="1"
                               Width="40"
                               TextAlignment="Right"/>
                </Grid>

                <TextBlock Text="SEPARATION:" Margin="5,0"/>
                <Grid Margin="5,5,5,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="SeparationSlider" Minimum="0" Maximum="2" Value="1" Grid.Column="0" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                    <TextBlock x:Name="SeparationValue"
                               Text="{Binding ElementName=SeparationSlider, Path=Value, StringFormat=F2}"
                               Foreground="#00FFFF"
                               Grid.Column="1"
                               Width="40"
                               TextAlignment="Right"/>
                </Grid>

                <TextBlock Text="ALIGNMENT:" Margin="5,0"/>
                <Grid Margin="5,5,5,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="AlignmentSlider" Minimum="0" Maximum="2" Value="1" Grid.Column="0" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                    <TextBlock x:Name="AlignmentValue"
                               Text="{Binding ElementName=AlignmentSlider, Path=Value, StringFormat=F2}"
                               Foreground="#00FFFF"
                               Grid.Column="1"
                               Width="40"
                               TextAlignment="Right"/>
                </Grid>

                <TextBlock Text="COHESION:" Margin="5,0"/>
                <Grid Margin="5,5,5,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="CohesionSlider" Minimum="0" Maximum="2" Value="1" Grid.Column="0" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                    <TextBlock x:Name="CohesionValue"
                               Text="{Binding ElementName=CohesionSlider, Path=Value, StringFormat=F2}"
                               Foreground="#00FFFF"
                               Grid.Column="1"
                               Width="40"
                               TextAlignment="Right"/>
                </Grid>

                <Rectangle Height="1" Fill="#00FF7F" Margin="0,10"/>

                <TextBlock Text="[OPTIONS]"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,10,0,10"/>
                <CheckBox x:Name="TrailCheckBox" Content="SHOW TRAIL" IsChecked="True"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
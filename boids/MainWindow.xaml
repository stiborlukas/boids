<Window x:Class="boids.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Boids Simulation" Height="600" Width="800">
    <Grid>
        <Canvas x:Name="SimulationCanvas" Background="LightGray" Margin="10,10,210,10"/>

        <StackPanel Width="200" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="StartButton" Content="Start" Margin="5" Click="StartButton_Click"/>
            <Button x:Name="PauseButton" Content="Pause" Margin="5" Click="PauseButton_Click"/>
            <Button x:Name="ResetButton" Content="Reset" Margin="5" Click="ResetButton_Click"/>
            <Button x:Name="ImportButton" Content="Import" Margin="5" Click="ImportButton_Click"/>
            <Button x:Name="ExportButton" Content="Export" Margin="5" Click="ExportButton_Click"/>

            <TextBlock Text="Number of Boids:" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Slider x:Name="BoidCountSlider" Minimum="10" Maximum="200" Value="50" Width="150"/>
                <TextBlock x:Name="BoidCountValue" Text="{Binding ElementName=BoidCountSlider, Path=Value, StringFormat=F0}" Width="40" TextAlignment="Right"/>
            </StackPanel>
            <TextBlock Text="Separation Strength:" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Slider x:Name="SeparationSlider" Minimum="0" Maximum="2" Value="1" Width="150" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                <TextBlock x:Name="SeparationValue" Text="{Binding ElementName=SeparationSlider, Path=Value, StringFormat=F2}" Width="40" TextAlignment="Right"/>
            </StackPanel>
            <TextBlock Text="Alignment Strength:" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Slider x:Name="AlignmentSlider" Minimum="0" Maximum="2" Value="1" Width="150" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                <TextBlock x:Name="AlignmentValue" Text="{Binding ElementName=AlignmentSlider, Path=Value, StringFormat=F2}" Width="40" TextAlignment="Right"/>
            </StackPanel>
            <TextBlock Text="Cohesion Strength:" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Slider x:Name="CohesionSlider" Minimum="0" Maximum="2" Value="1" Width="150" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
                <TextBlock x:Name="CohesionValue" Text="{Binding ElementName=CohesionSlider, Path=Value, StringFormat=F2}" Width="40" TextAlignment="Right"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>